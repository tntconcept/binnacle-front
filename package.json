{
  "name": "binnacle-api-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "24.0.17",
    "@types/js-cookie": "^2.2.4",
    "@types/node": "12.7.1",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/yup": "^0.26.22",
    "classnames": "^2.2.6",
    "downshift": "4.0.2",
    "formik": "^v2.1.1",
    "framer-motion": "^1.6.7",
    "i18next": "^17.0.9",
    "i18next-browser-languagedetector": "^3.0.3",
    "immer": "^5.3.2",
    "js-cookie": "^2.2.1",
    "react": "^16.12.0",
    "react-autosize-textarea": "^7.0.0",
    "react-dom": "^16.12.0",
    "react-i18next": "^10.11.5",
    "react-query": "0.3.23",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "styletron-engine-atomic": "^1.4.4",
    "styletron-react": "^5.2.6",
    "typescript": "3.7.4",
    "wretch": "^1.6.0",
    "yup": "^0.27.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext ts --ext tsx --fix",
    "check-types": "tsc -p tsconfig.json --pretty -noEmit",
    "pretty-all": "prettier-eslint --write \"src/**/*.{ts,tsx}\""
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "no-console": "warn",
      "react/jsx-curly-brace-presence": [
        "warn",
        {
          "props": "never",
          "children": "never"
        }
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "react/jsx-first-prop-new-line": [
        "warn",
        "multiline"
      ],
      "react/jsx-max-props-per-line": [
        "warn",
        {
          "maximum": 1
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "^9.3.3",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/classnames": "^2.2.9",
    "@types/faker": "^4.1.5",
    "@types/styletron-engine-atomic": "^1.1.0",
    "@types/styletron-react": "^5.0.1",
    "@types/styletron-standard": "^2.0.0",
    "css-to-object": "^1.1.0",
    "date-fns": "^2.0.1",
    "faker": "^4.1.0",
    "fetch-mock": "^8.3.1",
    "fetch-mock-jest": "^1.0.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "mockdate": "^2.0.5",
    "prettier-eslint-cli": "5.0.0",
    "react-media": "^1.10.0-alpha.1"
  }
}
