{
  "name": "binnacle-api-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "24.0.17",
    "@types/node": "12.7.1",
    "@types/react": "16.9.1",
    "@types/react-dom": "16.8.5",
    "@types/react-router-dom": "4.3.4",
    "@types/yup": "^0.26.22",
    "axios": "^0.19.0",
    "formik": "^1.5.8",
    "framer-motion": "^1.6.2",
    "i18next": "^17.0.9",
    "i18next-browser-languagedetector": "^3.0.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-i18next": "^10.11.5",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.1.0",
    "styletron-engine-atomic": "^1.4.0",
    "styletron-react": "^5.2.0",
    "typescript": "3.5.3",
    "yup": "^0.27.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext ts --ext tsx --fix",
    "check-types": "tsc -p tsconfig.json --pretty -noEmit",
    "pretty-all": "prettier-eslint --write \"src/**/*.{ts,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn check-types && yarn lint && yarn test --coverage --watchAll=false"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "no-console": "warn",
      "react/jsx-curly-brace-presence": [
        "warn",
        {
          "props": "never",
          "children": "never"
        }
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "react/jsx-first-prop-new-line": [
        "warn",
        "multiline"
      ],
      "react/jsx-max-props-per-line": [
        "warn",
        {
          "maximum": 1
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "4.0.0",
    "@testing-library/react": "^9.1.0",
    "@testing-library/react-hooks": "^2.0.1",
    "@types/faker": "^4.1.5",
    "@types/styletron-engine-atomic": "^1.1.0",
    "@types/styletron-react": "^5.0.1",
    "@types/styletron-standard": "^2.0.0",
    "axios-mock-adapter": "^1.17.0",
    "css-to-object": "^1.1.0",
    "faker": "^4.1.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "prettier-eslint-cli": "5.0.0",
    "react-media": "^1.10.0-alpha.1"
  }
}
