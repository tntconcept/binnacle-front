{
  "name": "binnacle-api-react",
  "version": "2.2.0",
  "private": true,
  "homepage": "/binnacle",
  "scripts": {
    "start": "react-scripts start",
    "build:dev": "PUBLIC_URL=/ env-cmd -f .env.development react-scripts build",
    "build:int": "env-cmd -f .env.integration react-scripts build && npm run zip-build",
    "build:prod": "GENERATE_SOURCEMAP=false react-scripts build && npm run zip-build",
    "zip-build": "cd build; zip -r ../binnacle_front_$npm_package_version.zip * .htaccess",
    "test": "env-cmd -f .env.development react-scripts test --env=jest-environment-jsdom-sixteen",
    "coverage": "env-cmd -f .env.development react-scripts test --coverage --watchAll=false --env=jest-environment-jsdom-sixteen",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext ts --ext tsx --fix",
    "check-types": "tsc -p tsconfig.json --pretty -noEmit",
    "format-all": "prettier --write \"src/**/*.{ts,tsx}\"",
    "analyze-bundle": "node analyze.js",
    "postinstall": "patch-package",
    "cypress": "cypress open",
    "cypress:run": "cypress run"
  },
  "dependencies": {
    "@chakra-ui/core": "1.0.0-rc.5",
    "@chakra-ui/theme": "1.0.0-rc.5",
    "@types/jest": "^25.2.3",
    "@types/match-sorter": "^5.0.0",
    "@types/node": "^12.12.31",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/yup": "^0.29.3",
    "browser-image-compression": "^1.0.12",
    "focus-visible": "^5.2.0",
    "formik": "^2.1.5",
    "framer-motion": "^1.11.0",
    "heroicons": "^0.4.2",
    "i18next": "^17.0.9",
    "i18next-browser-languagedetector": "^3.0.3",
    "immer": "^5.3.2",
    "ky": "^0.22.0",
    "match-sorter": "^5.0.0",
    "react": "0.0.0-experimental-94c0244ba",
    "react-dom": "0.0.0-experimental-94c0244ba",
    "react-focus-on": "^3.5.0",
    "react-i18next": "^10.11.5",
    "react-ios-pwa-prompt": "^1.8.0",
    "react-popper-tooltip": "^2.11.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "react-textarea-autosize": "^8.2.0",
    "reakit": "1.3.0-alpha.3",
    "typescript": "^3.9.7",
    "use-async-resource": "2.2.0",
    "yarn": "^1.22.4",
    "yup": "^0.29.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier-eslint --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "yarn check-types && yarn lint && yarn test --coverage --watchAll=false"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/api/interfaces/*.ts",
      "!src/serviceWorker.ts"
    ]
  },
  "coverageThreshold": {
    "global": {
      "statements": 86,
      "branches": 65,
      "functions": 70,
      "lines": 86
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/cypress": "^6.0.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^12.1.8",
    "@types/react-datepicker": "^3.1.1",
    "@types/react-responsive": "^8.0.2",
    "cypress": "5.4.0",
    "cypress-file-upload": "^4.1.1",
    "cypress-jest-adapter": "^0.1.1",
    "cypress-plugin-tab": "^1.0.5",
    "date-fns": "^2.16.1",
    "env-cmd": "^10.1.0",
    "husky": "^4.2.5",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^10.2.9",
    "patch-package": "^6.2.2",
    "postinstall-postinstall": "^2.1.0",
    "prettier-eslint-cli": "5.0.0",
    "progress-bar-webpack-plugin": "^2.1.0",
    "react-responsive": "^8.1.0",
    "react-test-renderer": "^16.12.0",
    "webpack-bundle-analyzer": "^3.8.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
