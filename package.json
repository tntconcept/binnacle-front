{
  "name": "binnacle-api-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "24.0.17",
    "@types/js-cookie": "^2.2.4",
    "@types/node": "12.7.1",
    "@types/react": "16.9.19",
    "@types/react-dom": "16.9.5",
    "@types/react-query": "^0.3.9",
    "@types/react-router-dom": "^5.1.3",
    "@types/recharts": "^1.8.7",
    "@types/yup": "^0.26.22",
    "add": "^2.0.6",
    "browser-image-compression": "^1.0.6",
    "downshift": "5.0.0",
    "formik": "^2.1.4",
    "framer-motion": "^1.8.3",
    "fuzzysearch": "^1.0.3",
    "i18next": "^17.0.9",
    "i18next-browser-languagedetector": "^3.0.3",
    "immer": "^5.3.2",
    "ky": "^0.19.0",
    "react": "^16.13.1",
    "react-autosize-textarea": "^7.0.0",
    "react-dom": "^16.13.1",
    "react-focus-on": "^3.3.0",
    "react-i18next": "^10.11.5",
    "react-query": "^1.0.35",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "recharts": "^1.8.5",
    "typescript": "3.7.4",
    "yarn": "^1.22.0",
    "yup": "^0.27.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext ts --ext tsx --fix",
    "check-types": "tsc -p tsconfig.json --pretty -noEmit",
    "pretty-all": "prettier-eslint --write \"src/**/*.{ts,tsx}\"",
    "analyze-bundle": "node analyze.js",
    "test:coverage": "SKIP_PREFLIGHT_CHECK=true CI=false react-scripts test --coverage"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "no-console": "warn",
      "react/jsx-curly-brace-presence": [
        "warn",
        {
          "props": "never",
          "children": "never"
        }
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "react/jsx-first-prop-new-line": [
        "warn",
        "multiline"
      ],
      "react/jsx-max-props-per-line": [
        "warn",
        {
          "maximum": 1
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "^9.3.3",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/faker": "^4.1.5",
    "@types/react-responsive": "^8.0.2",
    "date-fns": "^2.0.1",
    "faker": "^4.1.0",
    "fetch-mock": "^9.3.1",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "mockdate": "^2.0.5",
    "prettier-eslint-cli": "5.0.0",
    "progress-bar-webpack-plugin": "^2.1.0",
    "react-media": "^1.10.0-alpha.1",
    "react-responsive": "^8.0.3",
    "react-test-renderer": "^16.12.0",
    "webpack-bundle-analyzer": "^3.6.1"
  }
}
