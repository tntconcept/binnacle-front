{
  "name": "binnacle-api-react",
  "version": "1.0.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^12.12.31",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/recharts": "^1.8.10",
    "@types/yup": "^0.26.33",
    "browser-image-compression": "^1.0.12",
    "formik": "^2.1.4",
    "framer-motion": "^1.11.0",
    "fuzzysearch": "^1.0.3",
    "i18next": "^17.0.9",
    "i18next-browser-languagedetector": "^3.0.3",
    "immer": "^5.3.2",
    "ky": "^0.20.0",
    "react": "0.0.0-experimental-33c3af284",
    "react-dom": "0.0.0-experimental-33c3af284",
    "react-autosize-textarea": "^7.0.0",
    "react-error-boundary": "^1.2.5",
    "react-focus-on": "^3.3.0",
    "react-i18next": "^10.11.5",
    "react-ios-pwa-prompt": "^1.8.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.1",
    "react-window": "^1.8.5",
    "recharts": "^1.8.5",
    "swr": "^0.2.2",
    "typescript": "3.7.4",
    "what-input": "^5.2.10",
    "yarn": "^1.22.0",
    "yup": "^0.27.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build:int": "env-cmd -f .env.integration react-scripts build && npm run zip-build",
    "build:prod": "react-scripts build && npm run zip-build",
    "zip-build": "zip -r binnacle_front_$npm_package_version.zip build",
    "test": "env-cmd -f .env.development react-scripts test --env=jest-environment-jsdom-sixteen",
    "coverage": "react-scripts test --coverage --watchAll=false --env=jest-environment-jsdom-sixteen",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext ts --ext tsx --fix",
    "check-types": "tsc -p tsconfig.json --pretty -noEmit",
    "format-all": "prettier-eslint --write \"src/**/*.{ts,tsx}\"",
    "analyze-bundle": "node analyze.js",
    "test:coverage": "SKIP_PREFLIGHT_CHECK=true CI=false react-scripts test --coverage",
    "cypress": "cypress open --env SERVER_URL=http://localhost:8080",
    "cypress:run": "cypress run"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier-eslint --write"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "no-console": "warn",
      "react/jsx-curly-brace-presence": [
        "warn",
        {
          "props": "never",
          "children": "never"
        }
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "react/jsx-first-prop-new-line": [
        "warn",
        "multiline"
      ],
      "react/jsx-max-props-per-line": [
        "warn",
        {
          "maximum": 1
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "yarn check-types && yarn lint && yarn test --coverage --watchAll=false"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/api/interfaces/*.ts",
      "!src/serviceWorker.ts"
    ]
  },
  "coverageThreshold": {
    "global": {
      "statements": 86,
      "branches": 65,
      "functions": 70,
      "lines": 86
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.2.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^11.0.1",
    "@types/react-responsive": "^8.0.2",
    "cypress": "^4.7.0",
    "cypress-file-upload": "^4.0.7",
    "date-fns": "^2.14.0",
    "env-cmd": "^10.1.0",
    "fetch-mock": "^9.10.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "mockdate": "^3.0.2",
    "prettier-eslint-cli": "5.0.0",
    "progress-bar-webpack-plugin": "^2.1.0",
    "react-responsive": "^8.1.0",
    "react-test-renderer": "^16.12.0",
    "webpack-bundle-analyzer": "^3.8.0"
  }
}
